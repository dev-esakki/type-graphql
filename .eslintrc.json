{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended","prettier"],
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "useTabs": false,
        "printWidth": 100,
        "trailingComma": "none",
        "bracketSpacing": true,
        "endOfLine": "auto",
        "arrowParens": "avoid"
      }
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ]
  },
  "globals": {
    "log": true
  }
}
